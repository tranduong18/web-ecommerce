extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container-fluid
    .row.px-xl-5
      .col-12
        nav.breadcrumb.bg-light.mb-30
          a.breadcrumb-item.text-dark(href='/') Trang chủ
          a.breadcrumb-item.text-dark(href='/products') Sản phẩm
          span.breadcrumb-item.active #{pageTitle}
          
  if(wishlist.products.length > 0)
    .container-fluid
      .row.px-xl-5
        .col-lg-9.col-md-8
          .row.pb-3
            each item in wishlist.products
              .col-lg-4.col-md-6.col-sm-6.pb-1
                .product-item.bg-light.mb-4
                  .product-img.position-relative.overflow-hidden
                    img.img-fluid.w-100(src=item.productInfo.thumbnail, alt=item.title)
                    .product-action
                      a.btn.btn-outline-dark.btn-square(href=`/products/detail/${item.productInfo.slug}`)
                        i.fa.fa-search
                    a.close-icon(link=`/wishlist/delete/${item.productInfo.id}` delete-to-wishlist)
                      i.fa.fa-times
                  .text-center.py-4
                    a.h6.text-decoration-none.text-truncate(href=`/products/detail/${item.productInfo.slug}`) #{item.productInfo.title}
                    .d-flex.align-items-center.justify-content-center.mt-2
                      h5(style="color: red") $#{item.productInfo.priceNew}
                      h6.text-muted.ml-2
                        del(style="color: green") $#{item.productInfo.price}
                    .d-flex.align-items-center.justify-content-center.mb-1
                      small.fa.fa-star.text-primary.mr-1
                      small.fa.fa-star.text-primary.mr-1
                      small.fa.fa-star.text-primary.mr-1
                      small.fa.fa-star.text-primary.mr-1
                      small.fa.fa-star.text-primary.mr-1
                      small (99)

            .col-12
              nav
                ul.pagination.justify-content-center
                  li.page-item.disabled
                    a.page-link(href='#') Previous
                  li.page-item.active
                    a.page-link(href='#') 1
                  li.page-item
                    a.page-link(href='#') 2
                  li.page-item
                    a.page-link(href='#') 3
                  li.page-item
                    a.page-link(href='#') Next