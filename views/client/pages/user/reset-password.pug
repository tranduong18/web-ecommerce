extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-8.mx-auto
        +box-head(pageTitle)

        form(
          action="/user/password/reset?_method=PATCH"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu
            div(class="input-group" passField)
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                passInput
                required
              )
              div(class="input-group-append")
                button(
                  type="button"
                  class="btn btn-outline-secondary showPass"
                  id="togglePassword"
                  togglePassword
                )
                  i(class="fa fa-eye eye-icon")
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đổi mật khẩu