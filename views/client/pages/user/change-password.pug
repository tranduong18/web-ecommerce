extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        +box-head(pageTitle)
        .card.shadow-sm
          .card-body
            form(
              action="/user/profile/changePassword?_method=PATCH"
              method="POST"
            )
              .form-group.mb-3.position-relative
                label(for="password" class="form-label") Mật khẩu mới
                input(
                  type="text"
                  class="form-control"
                  name="password"
                  required
                )

              .form-group.mb-3.position-relative
                label(for="password" class="form-label") Xác nhận mật khẩu mới
                input(
                  type="text"
                  class="form-control"
                  id="cpassword"
                  name="cpassword"
                  required
                )

              .form-group.mb-4
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Cập nhật