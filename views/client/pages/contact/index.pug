extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    // Đường dẫn 
    .container-fluid
      .row.px-xl-5
        .col-12
          nav.breadcrumb.bg-light.mb-30
            a.breadcrumb-item.text-dark(href='/') Trang chủ
            span.breadcrumb-item.active Liên hệ
    // Hết Đường dẫn

    // Contact Start
    .container-fluid
      h2.section-title.position-relative.text-uppercase.mx-xl-5.mb-4
        span.bg-secondary.pr-3 Liên hệ
      .row.px-xl-5
        .col-lg-7.mb-5
          .contact-form.bg-light.p-30
            #success
            form#contactForm(name='sentMessage' novalidate='novalidate')
              .control-group
                input#name.form-control(type='text' placeholder='Nhập họ tên' required='required' data-validation-required-message='Please enter your name')
                p.help-block.text-danger
              .control-group
                input#email.form-control(type='email' placeholder='Nhập email' required='required' data-validation-required-message='Please enter your email')
                p.help-block.text-danger
              .control-group
                input#subject.form-control(type='text' placeholder='Nhập chủ đề' required='required' data-validation-required-message='Please enter a subject')
                p.help-block.text-danger
              .control-group
                textarea#message.form-control(rows='8' placeholder='Nhập nội dung' required='required' data-validation-required-message='Please enter your message')
                p.help-block.text-danger
              div
                button#sendMessageButton.btn.btn-primary.py-2.px-4(type='submit')
                  | Gửi
        .col-lg-5.mb-5
          .bg-light.p-30.mb-30
            iframe(style='width: 100%; height: 250px;' src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd' frameborder='0' allowfullscreen='' aria-hidden='false' tabindex='0')
          .bg-light.p-30.mb-3
            p.mb-2
              i.fa.fa-map-marker-alt.text-primary.mr-3
              | #{setting.address}
            p.mb-2
              i.fa.fa-envelope.text-primary.mr-3
              | #{setting.email}
            p.mb-2
              i.fa.fa-phone-alt.text-primary.mr-3
              | #{setting.phone}
    // Contact End
