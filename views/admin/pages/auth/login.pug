extends ../../layouts/auth.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng nhập
        form(
          action=`/${prefixAdmin}/auth/login`
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            div(class="input-group" passField)
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                passInput
                required
              )
              div(class="input-group-append")
                button(
                  type="button"
                  class="btn btn-outline-secondary showPass"
                  id="togglePassword"
                  togglePassword
                )
                  i(class="fa fa-eye eye-icon")
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng nhập